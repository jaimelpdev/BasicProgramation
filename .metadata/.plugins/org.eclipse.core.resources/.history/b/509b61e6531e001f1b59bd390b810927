package ejemplosRecursividad;

public class Ejemplo05BusquedaBinariaRecursiva2 {

	public static void main(String[] args) {

		int x = 4;

		int[] notas = { 1, 2, 3, 4, 5, 7, 8, 9, 10 };

		System.out.println(x + " se encuentra en la posiciÃ³n " + busqueda(notas, x, 0, notas.length - 1));

	}

	// Devuelve la posiciÃ³n de x en el array de nÃºmeros, buscando entre las
	// posiciones i y f.
	private static int busqueda(int[] numeros, int x, int i, int f) {
		if (i > f) {
			return -1;
		}

		int m = (i + f) / 2;

	}

}
